<header class="navbar navbar-default">
  <div class="container">
    <div class="col-sm-4">
      <span class="navbar-brand"><span class="flaticon-robot17"></span>&nbsp;&nbsp; Robbie's Robots!<span class="flaticon-robot17"></span></span>
    </div>
    <div class="col-sm-8">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/robots"><span class="glyphicon glyphicon-list"></span> Robot Directory</a></li>
        <li><a href="/robots/new"><span class="glyphicon glyphicon-plus"></span> Add New Robot</a></li>
        </ul>
    </div>
  </div>
</header>
<div class="container">
  <h4><strong class="red">Average Age of Robots: </strong> <%= @average_age.round(3) %></h4>
  <div class="col-sm-6 table-responsive">
    <h4>Hiring By Year<span class="flaticon-robot24"></span></h4>
    <table class="table table-striped table-bordered">
      <% @hiring_by_year.each do |year| %>
      <tr>
        <td><%= year[0] %></td>
        <td><%= year[1] %></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="col-sm-6 table-responsive">
    <h4>Robots By Department<span class="flaticon-robot24"></span></h4>
    <table class="table table-striped table-bordered">
      <% @robots_by_department.each do |department| %>
      <tr>
        <td><%= department[0] %></td>
        <td><%= department[1] %></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="col-sm-6 table-responsive">
    <h4>Robots By City<span class="flaticon-robot24"></span></h4>
    <table class="table table-striped table-bordered">
      <% @robots_by_city.each do |city| %>
      <tr>
        <td><%= city[0] %></td>
        <td><%= city[1] %></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="col-sm-6 table-responsive">
    <h4>Robots By State<span class="flaticon-robot24"></span></h4>
    <table class="table table-striped table-bordered">
      <% @robots_by_state.each do |state| %>
      <tr>
        <td><%= state[0] %></td>
        <td><%= state[1] %></td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
